include ../../../templates/common-template.pug

block append style
  //- не забыть поменять на scss!!!//
  link(rel="stylesheet" href="form-elements.css") 

.ui-kit-logo
  .logo__picture
    img(src="../img/logo-gray.svg")

section.inputs
  .inputs-wrapper
    include inputs/input.pug

    .input-item.input-item--default
      //- textField(title, style[Default/ Hover / Fokus], type, name - requaired; placeholder="", action="echo", method="post")
      +textField("Text field", "Default", "text", "email", "Email")(class="input__field input__field--default input__field--light")

    .input-item.input-item--hover
      +textField("Text field", "Hover / Focus", "text", "default", "This is pretty awesome")(class="input__field input__field--hover")

    .input-item.input-item--dropdown
      +textField("Dropdown", "Default", "text", "numberGuests", "Сколько гостей")(class="input__field input__field--dropdown")

    .input-item.input-item--masked
      +textField("Masked text field", "Default", "text", "datePicker", "ДД.ММ.ГГГГ")(class="input__field input__field--datepicker input__field--light")

    .inputs-wrapper--small
      .input-item.input-item--small.input-item--dropdown
        +textField("Date dropdown", "", "text", "datePicker", "ДД.ММ.ГГГГ")(class="input__field input__field--small input__field--dropdown")

      .input-item.input-item--small.input-item--dropdown
        +textField("Date dropdown", "", "text", "datePicker", "19.08.2019")(class="input__field input__field--small input__field--dropdown")

    .input-item.input-item--middle.input-item--dropdown
      +textField("Filter date dropdown", "", "text", "datePicker", "19 авг - 23 авг")(class="input__field input__field--middle input__field--dropdown")

    .input-item.input-item--middle.input-item--arrow
      +textField("Subscription text field", "", "text", "email", "Email")(class="input__field input__field--middle input__field--light")

  .toggles-wrapper

    .checkbox-buttons
      .checkbox-buttons__title Checkbox Buttons
        //- здесь будет три блока .checkbox-item с чекбоксами 


section.dropdowns


section.checkboxes


section.features

