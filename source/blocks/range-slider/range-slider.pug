mixin range-slider(min= 0, max= 999999, currency= "&#8381;")
  .range-slider
    .range-slider__header
      h3.range-slider__title Range slider
      .range-slider__value
        input(type = "text" class = "range-slider__value range-slider__value--from" value = "5000")
        span.range-slider__value.unicode!= currency
        span.range-slider__value--separator= '-'
        input(type = "text" class = "range-slider__value range-slider__value--to" value = "10000")
        span.range-slider__value.unicode!= currency
    .range-slider__inputs
      input(type="text" class="js-range-slider" name="my_range")