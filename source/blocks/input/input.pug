//- текстовое поле - общее

mixin textField(options)
  - const {title = "", id = "", style = "", expanded = "", withDatepicker = "", rangeAttributes= {}, type = "text", name = "", placeholder = "", placeholderColor = "", ariaLabel = "", description = "",} = options;

  .input-block
    - const isDatepicker= "datepicker-here"; // служебный класс для инициализации плагина datepicker;
    - let fieldStyle= ""; // определяет базу для сборки класса;
    - let inputStyle= "input__field"; // определяет базовую иконка в правой части (отсутствует);

    if (style== "dropdown")
      - fieldStyle= "dropdown"

    if (style== "subscribe")
      - fieldStyle= "subscribe"

    if (placeholderColor)
      - inputStyle= `${inputStyle} ${inputStyle}${placeholderColor}`

    if (expanded)
      - inputStyle= `${inputStyle} ${inputStyle}--expanded`

    if (withDatepicker)
      - inputStyle= `${inputStyle} ${isDatepicker}`

    label(class= fieldStyle)
      h3.input__title= title

      if (description)
        .input__description= description

      input(class= inputStyle, id= id, type= type, name= name, placeholder= placeholder, aria-label= ariaLabel)&attributes(rangeAttributes)

//- data-multiple-dates-separator= " - ",
  options.title: заголовок поля ввода "Text field";
  options.style: определяет наличие иконки в правой части:
                "" - без иконки,
                dropdown - стрелочка вниз (для дропдаунов)
                subscribe - стрелка вправо (подписка);
  options.withDatepicker: выпадающий календарь - true или отсутствует;
  options.expanded: меняет стиль при разворачивании инпута - true или отсутствует;
  options.type: тип текстового поля - text, email или date (?????);
  options.name: значение обязательного поля name для инпута;
  options.placeholder: то,что написано в плейсхолдере;
  options.placeholderСolor: цвет текста плейсхолдера,
                              по умолчанию $primary-color, при "--light" - $secondary-color;
  options.ariaLabel: содержание атрибута aria-label для скринридеров;
  options.description: поля описания назначения инпута
                      (в правой части) - присутствует только в UI-Kit:
                       - Default
                       - Hover / Focus для обозначения наведенного состояния,
                       - Expanded для развернутого дропдауна;

