include ../../blocks/navigation/navigation.pug
include ../../blocks/button/button.pug

mixin header(isRegistered)
  header.standard
    .header__container
      .header__logo
        +logo("color")

      .menu-container
        nav.main-nav
          +navigation("horizontal", [
            {
              title: "О нас",
              link: "/some-address/change-me",
              style: "",
              isDifferent: true,
            },
            {
              title: "Услуги",
              link: "/some-address/change-me",
              style: "dropdown",
            },
            {
              title: "Вакансии",
              link: "/some-address/change-me",
              style: "",
            },
            {
              title: "Новости",
              link: "/some-address/change-me",
              style: "",
            },
            {
              title: "Соглашения",
              link: "/some-address/change-me",
              style: "dropdown",
            },
          ])

        if (isRegistered == "registered")
          - let userName = "Юлий Цезарь"
          a(href = "/some-address/change-me" class = "header__userName")= userName

        else
          .header-button.header-button--signIn
            +button({
                title: "Войти",
                color: "secondary",
                style: "default",
                ariaLabel: "button",
                link: "/some-address/change-me",
                }, false)
          .header-button.header-button--registration
            +button({
                title: "Зарегистрироваться",
                color: "primary",
                style: "default",
                ariaLabel: "button",
                link: "/some-address/change-me",
                }, false)

