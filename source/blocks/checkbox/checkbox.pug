//- checkboxes base

//-
  options.title: подпись чекбокса;
  options.description: описание преимуществ для rich checkbox (по умолчанию отсутствует);
  options.name: значение обязательного поля name для инпута (разные имена для каждого чекбокса);
  option.checked: для отмеченных чекбоксов (true), или отсутствует

  //options.ariaLabel: содержание атрибута aria-label для скринридеров;
  //options.action: обязательное поле action формы "/some-address/change-me",
  //options.method: обязательное поле method формы "post"

mixin checkbox(options)

  - var ifRich= ""

  if(options.description)
    - ifRich= "checkbox-label--rich"

  .checkbox-block
    label(class= ifRich)= options.title
      if(options.checked)
        input(name= options.name, type= "checkbox", checked)

      else
        input(name= options.name, type= "checkbox")
      .checkbox__mark

      if(options.description)
        p(options.class= "checkbox-block__description")= options.description

