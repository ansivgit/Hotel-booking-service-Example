extends ../base/template.pug

include ../../blocks/logo/logo.pug
include ../../blocks/input/input.pug
include ../../blocks/checkbox-list/checkbox-list-date.pug
include ../../blocks/checkbox-list/checkbox-list.pug
include ../../blocks/radiobutton/radiobutton.pug
include ../../blocks/toggle/toggle.pug
include ../../blocks/likes/likes.pug
include ../../blocks/ratebutton/ratebutton.pug
include ../../blocks/range-slider/range-slider.pug
include ../../blocks/button/button.pug
include ../../blocks/pagination/pagination.pug
include ../../blocks/dropdown/dropdown.pug
include ../../blocks/bullet-list/bullet-list.pug
include ../../blocks/features-brief/features-brief.pug
include ../../blocks/comment/comment.pug

block title
  title TOXIN Form-Elements

block scripts

block main
  .logo-block
    +logo("gray")

  section.form-elements
    .inputs-wrapper
      .input__item
        +textField({
          title: "Text field",
          style: "",
          description: "Default",
          type: "text",
          name: "email",
          placeholder: "Email",
          placeholderColor: "--light",
          ariaLabel: "e-mail"
        })

      .input__item
        +textField({
          title: "Text field",
          style: "",
          description: "Hover / Focus",
          type: "text",
          name: "default",
          placeholder: "This is pretty awesome",
          ariaLabel: "hover"
        })

      .input__item
        +textField({
          title: "Dropdown",
          style: "dropdown",
          description: "Default",
          type: "text",
          name: "numberGuests",
          placeholder: "Сколько гостей",
          ariaLabel: "how many guests"
        })

      .input__item
        +textField({
          title: "Masked text field",
          style: "",
          withDatepicker: true,
          description: "Default",
          type: "text",
          name: "datePicker",
          placeholder: "ДД.ММ.ГГГГ",
          placeholderColor: "--light",
          ariaLabel: "arrival date"
        })

      .inputs-wrapper--smaller
        .input__item.input__item--small
          +textField({
            title: "Date dropdown",
            style: "dropdown",
            withDatepicker: true,
            type: "text",
            name: "datePicker",
            placeholder: "ДД.ММ.ГГГГ",
            ariaLabel: "arrival date"
          })

        .input__item.input__item--small
          +textField({
            title: "Date dropdown",
            style: "dropdown",
            withDatepicker: true,
            type: "text",
            name: "datePicker",
            placeholder: "19.08.2019",
            ariaLabel: "arrival date"
          })

      .input__item.input__item--middle
        +textField({
          title: "Filter date dropdown",
          style: "dropdown",
          withDatepicker: true,
          type: "text",
          name: "datePicker",
          placeholder: "19 авг - 23 авг",
          ariaLabel: "arrival interval"
        })

      .input__item.input__item--middle
        +textField({
          title: "Subscription text field",
          style: "subscribe",
          type: "text",
          name: "email",
          placeholder: "Email",
          placeholderColor: "--light",
          ariaLabel: "email for subscribe"
        })

    .toggles-wrapper

      .checkbox-buttons
        +checkboxList("Checkbox Buttons", options = checkboxListPermission)

      .radio-buttons
        h3.radio-buttons__title Radio Buttons
        +radiobuttons("gender", [
          {title: "Мужчина", value: "man", checked: true,},
          {title: "Женщина", value: "woman",},
        ])

      .toggles
        h3.toggles__title Toggle
        .toggle__item
          +toggles()(checked)
        .toggle__item
          +toggles("offers-no-agree")

      .like-buttons
        h3.like-buttons__title Like button
        .like-buttons__item
          +likeButton()
        .like-buttons__item
          +likeButton("more-likes", "12")(checked)

      .rate-buttons
        h3.rate-buttons__title Rate button
        .rate-buttons__item
          +rating(4)
        .rate-buttons__item
          +rating(5)

    .buttons-wrapper

      .range-slider__wrapper
        +range-slider(5000, 10000)

      .buttons
        h3.buttons__title Buttons
        .buttons__positioner
          .button__item
            +button({
              title: "Click me",
              color: "primary",
              style: "default",
              name: "default",
              value: "value",
              type: "button",
              ariaLabel: "button",
              }, true)
          .button__item
            +button({
              title: "Click me",
              color: "primary",
              style: "hover",
              name: "default",
              value: "value",
              type: "button",
              ariaLabel: "button",
              }, true)

        .buttons__positioner
          .button__item
            +button({
                title: "Click me",
                color: "secondary",
                style: "default",
                name: "default",
                value: "value",
                type: "button",
                ariaLabel: "button",
                }, true)
          .button__item
            +button({
              title: "Click me",
              color: "secondary",
              style: "hover",
              name: "default",
              value: "value",
              type: "button",
              ariaLabel: "button",
              }, true)

        .buttons__positioner.buttons__positioner--tight
          .button__item.button__item--tight
            +button({
                title: "Click me",
                color: "complementary",
                style: "default",
                name: "default",
                value: "value",
                type: "submit",
                ariaLabel: "submit",
              }, true)
          .button__item.button__item--tight
            +button({
              title: "Click me",
              color: "complementary",
              style: "default",
              name: "default",
              value: "value",
              type: "reset",
              ariaLabel: "reset",
              }, true)

        .button__item.button__item--wide
          +button({
              title: "Перейти к оплате",
              color: "primary",
              style: "default",
              icon: "arrow_forward",
              name: "default",
              value: "value",
              type: "submit",
              ariaLabel: "submit",
              }, true)

      .pagination
        h3.pagination__title Pagination
        .pagination__positioner
          +pagination(1, 15)

    //- раздел дропдаунов

    .dropdown-room-wrapper.formRoomSearch
      +dropdown({
        title: "Dropdown",
        description: "Default",
        name: "rooms",
        value: "2 спальни, 2 кровати...",
        ariaLabel: "room convenience",
      },
      [
        {title: "Спальни", name: "bedrooms", valueDefault: 0},
        {title: "Кровати", name: "beds", valueDefault: 0},
        {title: "Ванные комнаты", name: "bathrooms", valueDefault: 0},
      ], buttons = false)

      +dropdown({
        title: "Dropdown",
        expanded: true,
        description: "Default",
        name: "rooms",
        value: "2 спальни, 2 кровати...",
        ariaLabel: "room convenience"
      },
      [
        {title: "Спальни", name: "bedrooms", valueDefault: 2},
        {title: "Кровати", name: "beds", valueDefault: 2},
        {title: "Ванные комнаты", name: "bathrooms", valueDefault: 0},
      ],
      buttons = false)

    .dropdown__item--guests.dropdown__item--guests--1
      +dropdown({
        title: "Dropdown",
        style: "dropdown",
        expanded: true,
        type: "text",
        name: "guests",
        value: "Сколько гостей",
        ariaLabel: "quantity guests"
      },
      [
        {title: "Взрослые", name: "adults", valueDefault: 0},
        {title: "Дети", name: "childrens", valueDefault: 0},
        {title: "Младенцы", name: "babies", valueDefault: 0},
      ])

    .dropdown__item--guests.dropdown__item--guests--2
      +dropdown({
        title: "Dropdown",
        style: "dropdown",
        expanded: true,
        type: "text",
        name: "guests",
        value: "3 гостя",
        ariaLabel: "quantity guests"
      },
      [
        {title: "Взрослые", name: "adults", valueDefault: 2},
        {title: "Дети", name: "childrens", valueDefault: 1},
        {title: "Младенцы", name: "babies", valueDefault: 0},
      ])

    //- раздел checkboxes

    .checkbox__expandables__wrapper
      .checkbox__expandable__item
        +checkboxList("Expandable checkbox list", options = checkboxListComfort, isExpandable = true, isExpanded = false)
      .checkbox__expandable__item
        +checkboxList("Expandable checkbox list", options = checkboxListComfort, isExpandable = true, isExpanded = true)

    .checkbox__rich
      +checkboxList("Rich checkbox buttons", options = checkboxListRich)

    .bullets
      +bulletList("Bullet list", ["Нельзя с питомцами", "Без вечеринок и мероприятий", "Время прибытия — после 13:00, а\u00A0выезд\u00A0до\u00A012:00"])

    //- раздел отзывов и преимуществ

    .features-brief-block
      +featuresBrief([
        {icon: "insert_emoticon", title: "Комфорт", description: "Шумопоглощающие стены"},
        {icon: "location_city", title: "Удобство", description: "Окно в каждой из спален"},
      ])

    .comment-block
      +commentList([
        {
          avatar: "../../blocks/comment/img/avatar01.jpg",
          name: "Мурад Сарафанов",
          date: "5 дней назад",
          value: 12,
          text: "Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие. Выкрикивал комплименты повару — никто не жаловался из соседей."
        }
      ])