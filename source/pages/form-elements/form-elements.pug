extends ../base/template.pug

block title
  title TOXIN Form-Elements

block scripts

  script(src='./form-elements.js')

block main

  include ../../blocks/logo-uiKit/logo-uiKit.pug

  section.inputs
    .inputs-wrapper
      include ../../blocks/input/input.pug

      .input__item
        +textField({
          title: "Text field",
          style: "",
          description: "Default",
          type: "text",
          name: "email",
          placeholder: "Email",
          placeholderColor: "--light",
          ariaLabel: "e-mail"
        })

      .input__item
        +textField({
          title: "Text field",
          style: "",
          description: "Hover / Focus",
          type: "text",
          name: "default",
          placeholder: "This is pretty awesome",
          ariaLabel: "hover"
        })

      .input__item
        +textField({
          title: "Dropdown",
          style: "dropdown",
          description: "Default",
          type: "text",
          name: "numberGuests",
          placeholder: "Сколько гостей",
          ariaLabel: "how many guests"
        })

      .input__item
        +textField({
          title: "Masked text field",
          style: "",
          description: "Default",
          type: "text",
          name: "datePicker",
          placeholder: "ДД.ММ.ГГГГ",
          placeholderColor: "--light",
          ariaLabel: "arrival date"
        })

      .inputs-wrapper--smaller
        .input__item.input__item--small
          +textField({
            title: "Date dropdown",
            style: "dropdown",
            type: "text",
            name: "datePicker",
            placeholder: "ДД.ММ.ГГГГ",
            ariaLabel: "arrival date"
          })

        .input__item.input__item--small
          +textField({
            title: "Date dropdown",
            style: "dropdown",
            type: "text",
            name: "datePicker",
            placeholder: "19.08.2019",
            ariaLabel: "arrival date"
          })

      .input__item.input__item--middle
        +textField({
          title: "Filter date dropdown",
          style: "dropdown",
          type: "text",
          name: "datePicker",
          placeholder: "19 авг - 23 авг",
          ariaLabel: "arrival interval"
        })

      .input__item.input__item--middle
        +textField({
          title: "Subscription text field",
          style: "subscribe",
          type: "text",
          name: "email",
          placeholder: "Email",
          placeholderColor: "--light",
          ariaLabel: "email for subscribe"
        })

    .toggles-wrapper

      .checkbox-buttons
        include ../../blocks/checkbox/checkbox.pug

        h3.checkbox-buttons__title Checkbox Buttons
        .checkbox-buttons__item
          +checkbox("checkbox-smoke", "Можно курить")

        .checkbox-buttons__item
          +checkbox("checkbox-pets", "Можно с питомцами")(checked)

        .checkbox-buttons__item
          +checkbox("checkbox-guests", "Можно пригласить гостей (до 10 человек)")(checked)

      .radio-buttons
        h3.radio-buttons__title Radio Buttons
        include ../../blocks/radiobutton/radiobutton.pug

      .toggles
        include ../../blocks/toggle/toggle.pug

        h3.toggles__title Toggle
        .toggle__item
          +toggles()(checked)
        .toggle__item
          +toggles("offers-no-agree")

      .like-buttons
        include ../../blocks/likes/likes.pug

        h3.like-buttons__title Like button
        .like-buttons__item
          +likeButton()
        .like-buttons__item
          +likeButton("more-likes", "12")(checked)

      .rate-buttons
        include ../../blocks/ratebutton/ratebutton.pug

        h3.rate-buttons__title Rate button

        .rate-buttons__item
          +rating(4)
        .rate-buttons__item
          +rating(5)

    .buttons-wrapper

      .range-slider
        include ../../blocks/range-slider/range-slider.pug

      .buttons
        include ../../blocks/button/button.pug

        h3.buttons__title Buttons
        //- title="Click me", color, style="default", name="default", value="value",
          type="button", action="/some-address/change-me", method="post"
        .buttons__positioner
          .button__item
            +button("Click me", "primary", "default", "default", "value")
          .button__item
            +button("Click me", "primary", "hover", "default", "value")
        .buttons__positioner
          .button__item
            +button("Click me", "secondary", "default", "default", "value")
          .button__item
            +button("Click me", "secondary", "hover", "default", "value")

        span.button__icon.button__icon--primary Click me
        span.button__icon.button__icon--secondary Click me

        .button__item--wide
          +button("Перейти к оплате", "primary", "default", "default", "value", "submit")

      .pagination
        include ../../blocks/pagination/pagination.pug

        h3.pagination__title Pagination
        .pagination__positioner
          +pagination(1, 15)

    section.dropdowns

      .dropdown-room-wrapper
        .dropdown__item
          +textField({
            title: "Dropdown",
            style: "dropdown",
            description: "Default",
            type: "text",
            name: "rooms",
            placeholder: "2 спальни, 2 кровати...",
            ariaLabel: "room convenience"
          })
          //+textField("Dropdown", "dropdown", "default", "text", "rooms", "2 спальни, 2 кровати...")(class="input__field input__field--middle input__field--dropdown")
        .dropdown__item
          include ../../blocks/dropdowns/dropdown.pug

    section.checkboxes


    section.features